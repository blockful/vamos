# Environment Variables for Sepolia Deployment
# Copy this file to .env.sepolia and fill in your values

# ================================
# DEPLOYMENT WALLET
# ================================
PRIVATE_KEY=

# ================================
# RPC URL
# ================================
RPC_URL=

# ================================
# ETHERSCAN VERIFICATION
# ================================
# Get API key at: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=

# ================================
# TOKEN CONFIGURATION
# ================================
TOKEN_NAME=Vamos
TOKEN_SYMBOL=VAMOS

# ================================
# CONTRACT PARAMETERS
# ================================
PROTOCOL_FEE_RATE=200  # 2% in basis points
CREATOR_FEE_RATE=300   # 3% in basis points

# ================================
# DEPLOYED ADDRESSES (fill after deployment)
# ================================
TOKEN_ADDRESS=0x62159F04Abc0616e7A99a417932891978D7F733c
VAMOS_ADDRESS=

# ================================
# MINTING PARAMETERS
# ================================
RECIPIENT=0x0000000000000000000000000000000000000000
AMOUNT=1000000000000000000000  # 1000 tokens (18 decimals)

